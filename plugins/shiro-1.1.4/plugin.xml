    <method name='getRoleMap' artefact='Filters' type='org.apache.shiro.grails.ShiroFilters'>
      <description />
      <argument type='java.lang.String' />
    </method>
    <method name='getPermissionMap' artefact='Filters' type='org.apache.shiro.grails.ShiroFilters'>
      <description />
      <argument type='java.lang.String' />
    </method>
    <method name='accessControl' artefact='Filters' type='org.codehaus.groovy.grails.plugins.web.filters.FilterConfig'>
      <description />
    </method>
    <method name='accessControl' artefact='Filters' type='org.codehaus.groovy.grails.plugins.web.filters.FilterConfig'>
      <description />
      <argument type='java.util.Map' />
    </method>
    <method name='accessControl' artefact='Filters' type='org.codehaus.groovy.grails.plugins.web.filters.FilterConfig'>
      <description />
      <argument type='groovy.lang.Closure' />
    </method>
    <method name='accessControl' artefact='Filters' type='org.codehaus.groovy.grails.plugins.web.filters.FilterConfig'>
      <description />
